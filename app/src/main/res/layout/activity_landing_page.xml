<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".LandingPageActivity"
  android:background="@drawable/gradient_background">

  <TextView
    android:id="@+id/landingPageTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="TextView"
    android:textFontWeight="@integer/material_motion_duration_medium_2"
    android:textSize="36sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/adminStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:text="TextView"
    android:textFontWeight="@integer/material_motion_duration_medium_2"
    android:textSize="18sp"
    app:layout_constraintBottom_toTopOf="@+id/goToAdminPageButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/landingPageTitle"
    app:layout_constraintVertical_bias="0.968" />

  <Button
    android:id="@+id/goToAdminPageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="72dp"
    android:text="Go to Secret Admin Page"
    android:textFontWeight="@integer/material_motion_duration_medium_2"
    android:visibility="invisible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/landingPageTitle"
    tools:visibility="visible" />

  <Button
    android:id="@+id/logoutButton"
    android:layout_width="100pt"
    android:layout_height="20pt"
    android:text="Log out"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/goToAdminPageButton" />

  <Button
    android:id="@+id/toChoreDisplayButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Chores!"
    android:textFontWeight="@integer/material_motion_duration_medium_2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/activeFamilyGroupsRecyclerView" />

  <TextView
    android:id="@+id/emailText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="dddd"
    android:textColor="#7F7D7D"
    app:layout_constraintBottom_toTopOf="@+id/adminStatus"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/landingPageTitle" />

  <TextView
    android:id="@+id/whatFamilyText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="TextView"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/activeFamilyGroupsRecyclerView"
    android:layout_width="372dp"
    android:layout_height="300dp"
    android:padding="2dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/whatFamilyText"
    tools:listitem="@layout/group_recycler_item" />

  <TextView
    android:id="@+id/textView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:text="Welcome to the main landing page! Here, click a child to see their tasks. If you are an admin or yourself, you can edit the tasks that were completed!"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/logoutButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
